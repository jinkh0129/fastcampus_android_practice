<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/one"
        android:layout_toLeftOf="@+id/five"
        android:layout_above="@+id/five"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#04F8DC"/>
    <TextView
        android:id="@+id/two"
        android:layout_toLeftOf="@+id/three"
        android:layout_width="100dp"
        android:layout_above="@+id/five"
        android:layout_height="100dp"
        android:background="#FFE500"/>
    <TextView
        android:id="@+id/three"
        android:layout_above="@+id/six"
        android:layout_toRightOf="@+id/five"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#F18868"/>
    <TextView
        android:id="@+id/four"
        android:layout_toLeftOf="@+id/five"
        android:layout_below="@+id/one"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#D4DF63"/>
    <TextView
        android:id="@+id/five"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="#EC5353"/>
    <TextView
        android:id="@+id/six"
        android:layout_toRightOf="@+id/five"
        android:layout_centerVertical="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#977979"/>
    <TextView
        android:id="@+id/seven"
        android:layout_toLeftOf="@+id/eight"
        android:layout_below="@+id/five"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#D610F8"/>
    <TextView
        android:layout_toLeftOf="@+id/nine"
        android:layout_below="@+id/five"
        android:id="@+id/eight"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#7FDF13"/>
    <TextView
        android:layout_toRightOf="@+id/five"
        android:layout_below="@+id/six"
        android:id="@+id/nine"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#13F8F0"/>


</RelativeLayout>