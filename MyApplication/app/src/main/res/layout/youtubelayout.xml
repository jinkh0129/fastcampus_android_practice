<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/youtube"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/youtube_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/youtube"
            android:text="My Tube"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#504b4b">

            <RelativeLayout
                android:id="@+id/first_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/first"
                        android:layout_width="380dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/socks" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="340dp"
                        android:layout_marginTop="185dp"
                        android:background="#000000"
                        android:text="10:11"
                        android:textColor="#ffffff" />

                    <ImageView
                        android:id="@+id/first_profile"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/first"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/male02" />

                    <TextView
                        android:id="@+id/first_headline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/first"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/first_profile"
                        android:text="패스트 캠퍼스 안드로이드 강의1"
                        android:textColor="#ffffff"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/first_headline_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/first_headline"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/first_profile"
                        android:text="오늘의 강의 내용은..."
                        android:textColor="#ffffff"
                        android:textSize="13dp" />


                </RelativeLayout>



            </RelativeLayout>


        </LinearLayout>



    </ScrollView>
</LinearLayout>