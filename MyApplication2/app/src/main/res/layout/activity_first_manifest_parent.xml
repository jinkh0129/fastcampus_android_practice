<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/outerBox"
    tools:context=".FirstActivity_manifestParent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="첫번째 페이지"
            android:textColor="#000000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/goSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/innerBox"
                android:layout_marginRight="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="두번째 페이지로"
                android:textColor="#000000" />
            <Button
                android:id="@+id/goThird"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/innerBox"
                android:fontFamily="sans-serif-condensed"
                android:text="세번째 페이지로"
                android:textColor="#000000" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>